<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven/>

    <bean id="playerDao" class="dk.frankbille.scoreboard.dao.PlayerDao"/>
    <bean id="gameDao" class="dk.frankbille.scoreboard.dao.GameDao"/>

    <bean id="playerController" class="dk.frankbille.scoreboard.controller.PlayerController">
        <property name="playerDao" ref="playerDao"/>
    </bean>

    <bean id="gameController" class="dk.frankbille.scoreboard.controller.GameController">
        <property name="gameDao" ref="gameDao"/>
    </bean>

    <bean id="adminController" class="dk.frankbille.scoreboard.controller.AdminController"/>

</beans>