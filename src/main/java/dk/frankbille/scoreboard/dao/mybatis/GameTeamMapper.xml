<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dk.frankbille.scoreboard.dao.mybatis.GameTeamMapper">
	<insert id="insertGameTeam" parameterType="dk.frankbille.scoreboard.domain.GameTeam" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO
			game_team
		(
			score,
			game_id,
			team_id
		)
		VALUES
		(
			#{score},
			#{game.id},
			#{team.id}
		)
	</insert>

	<update id="updateGameTeam" parameterType="dk.frankbille.scoreboard.domain.GameTeam">
		UPDATE
			game_team
		SET
			score = #{score}
		WHERE
			id = #{id}
	</update>
</mapper>